<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kavir.ali.kavir_msg">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name="com.kavir.ali.kavir_msg.Application"
        android:allowBackup="true"
        android:icon="@drawable/logo_kavir"
        android:label="@string/app_name"
        android:roundIcon="@drawable/kavir_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.kavir.ali.kavir_msg.activity.SplashActivity"
            android:configChanges="orientation|screenSize"
            android:noHistory="true"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kavir.ali.kavir_msg.activity.SearchActivity"
            android:configChanges="orientation|screenSize"
            android:noHistory="false"
            android:theme="@style/NoActionBar" />
        <activity
            android:name="com.kavir.ali.kavir_msg.activity.PostActivity"
            android:configChanges="orientation|screenSize"
            android:noHistory="false"
            android:theme="@style/NoActionBar" />
        <activity
            android:name="com.kavir.ali.kavir_msg.activity.TitlePostsActivity"
            android:configChanges="orientation|screenSize"
            android:noHistory="false"
            android:theme="@style/NoActionBar" />
        <activity
            android:name="com.kavir.ali.kavir_msg.activity.LoginActivity"
            android:configChanges="orientation|screenSize"
            android:noHistory="true"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name="com.kavir.ali.kavir_msg.activity.QrCodeScanerActivity"
            android:configChanges="orientation|screenSize"
            android:noHistory="true"
            android:theme="@style/FullscreenTheme"/>
        <activity
            android:name="com.kavir.ali.kavir_msg.activity.CategoryActivity"
            android:configChanges="orientation|screenSize"
            android:noHistory="false"
            android:theme="@style/NoActionBar"/>

        <activity
            android:name="com.kavir.ali.kavir_msg.activity.SubCategoryActivity"
            android:configChanges="orientation|screenSize"
            android:noHistory="false"
            android:clearTaskOnLaunch="true"
            android:theme="@style/NoActionBar" />
    </application>

</manifest>