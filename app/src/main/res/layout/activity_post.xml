<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PostActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        app:cardCornerRadius="10dp"
        android:padding="3dp"
        app:cardElevation="10dp"
        android:id="@+id/post_content_card"
        android:elevation="10dp"
        app:cardMaxElevation="15dp"
        app:cardBackgroundColor="@color/g200"
        tools:ignore="MissingConstraints" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <customviews.CustomTextView3
                android:layout_width="wrap_content"
                android:textSize="17dp"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:lines="1"
                android:id="@+id/title_post_card"
                android:textDirection="rtl"
                android:textColor="@color/blue800"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/split_line"
                android:layout_below="@+id/title_post_card"
                android:background="@color/counterColor"/>

            <customviews.CustomTextView
                android:layout_width="match_parent"
                android:padding="10dp"
                android:textColor="@color/brown800"
                android:maxLines="10"
                android:textDirection="rtl"
                android:layout_below="@+id/split_line"
                android:id="@+id/content_post_card"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/split2_line"
                android:layout_below="@+id/content_post_card"
                android:background="@color/counterColor"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layoutDirection="rtl"
                android:layout_below="@+id/split2_line"
                android:layout_height="wrap_content">
                <customviews.CustomTextView3
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:textDirection="rtl"
                    android:textSize="16dp"
                    android:id="@+id/date_post_card"
                    android:text="5555"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/blue800"
                    android:layout_height="wrap_content"/>
                <customviews.CustomTextView3
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:textDirection="rtl"
                    android:textSize="16dp"
                    android:id="@+id/auther_post_card"
                    android:text="444"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/blue800"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:id="@+id/comment_recyclerview_posts"
                android:clipToPadding="false"
                android:layout_below="@+id/post_content_card"
                android:scrollbars="vertical"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>