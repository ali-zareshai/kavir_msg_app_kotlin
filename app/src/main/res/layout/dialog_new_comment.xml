<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/toolbar_dialog1"
            android:background="@color/pink500"
            android:padding="4dp"
            android:layout_marginBottom="15dp"
            android:layout_height="70dp">
            <customviews.CustomTextView3
                android:layout_width="wrap_content"
                android:text="@string/add_comment"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:textSize="21dp"
                android:padding="10dp"
                android:layout_height="match_parent"/>
            <ImageButton
                android:layout_width="50dp"
                android:src="@drawable/ic_close_black_24dp"
                android:scaleType="center"
                android:padding="10dp"
                android:background="@color/pink500"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:id="@+id/close_toolbar_btn"
                android:layout_height="50dp"/>
        </RelativeLayout>
        <customviews.CustomEditText2
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:hint="@string/name"
            android:background="@drawable/border_edit_text"
            android:lines="1"
            android:textDirection="rtl"
            android:id="@+id/name_comment_dialog"
            android:layout_height="wrap_content"/>
        <customviews.CustomEditText2
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:background="@drawable/border_edit_text"
            android:hint="@string/email"
            android:lines="1"
            android:textDirection="rtl"
            android:inputType="textEmailAddress"
            android:id="@+id/email_comment_dialog"
            android:layout_height="wrap_content"/>
        <customviews.CustomEditText2
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:background="@drawable/border_edit_text"
            android:hint="@string/comment"
            android:textDirection="rtl"
            android:lines="5"
            android:minLines="5"
            android:maxLines="5"
            android:inputType="textEmailAddress"
            android:id="@+id/comment_comment_dialog"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/submit_comment_dialog"
            android:background="@color/pink500"
            android:padding="4dp"
            android:layout_marginTop="20dp"
            android:layout_height="70dp">
            <customviews.CustomTextView3
                android:layout_width="wrap_content"
                android:text="@string/send"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:textSize="21dp"
                android:padding="10dp"
                android:layout_height="wrap_content"/>
        </RelativeLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>