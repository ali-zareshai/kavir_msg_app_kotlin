<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="1dp"
        app:cardCornerRadius="10dp"
        android:padding="5dp"
        app:cardElevation="10dp"
        android:id="@+id/item_titile_list_card"
        android:elevation="10dp"
        app:cardMaxElevation="15dp"
        app:cardBackgroundColor="@color/g200"
        tools:ignore="MissingConstraints" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <customviews.CustomTextView3
                android:layout_width="wrap_content"
                android:textSize="17dp"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:lines="1"
                android:id="@+id/title_card"
                android:textDirection="rtl"
                android:textColor="@color/blue800"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/split_line"
                android:layout_below="@+id/title_card"
                android:background="@color/counterColor"/>

            <customviews.CustomTextView
                android:layout_width="match_parent"
                android:padding="10dp"
                android:textColor="@color/brown800"
                android:maxLines="10"
                android:textDirection="rtl"
                android:layout_below="@+id/split_line"
                android:id="@+id/content_card"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/brown800"
                android:orientation="horizontal"
                android:gravity="right"
                android:layoutDirection="rtl"
                android:layout_below="@+id/content_card"
                android:layout_height="wrap_content">
                <customviews.CustomTextView3
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:textDirection="rtl"
                    android:textSize="16dp"
                    android:id="@+id/auther_card"
                    android:layout_marginRight="15dp"
                    android:text="5555"
                    android:textColor="@color/white"
                    android:layout_height="match_parent"/>
                <customviews.CustomTextView3
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:textDirection="rtl"
                    android:textSize="16dp"
                    android:id="@+id/date_card"
                    android:layout_marginRight="25dp"
                    android:text="6666"
                    android:textColor="@color/white"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_comment_24dp"
                    android:padding="5dp"
                    android:layout_marginRight="50dp"
                    android:layout_height="wrap_content"/>
                <customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:textDirection="rtl"
                    android:textSize="16dp"
                    android:id="@+id/comment_count_card"
                    android:layout_marginRight="50dp"
                    android:text="777"
                    android:textColor="@color/white"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
