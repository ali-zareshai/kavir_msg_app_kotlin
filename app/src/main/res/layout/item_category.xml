<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="4dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">





        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rel133"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="90dp"
                android:layout_alignParentRight="true"
                android:id="@+id/relask"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/image_category"
                    android:layout_margin="4dp"
                    android:padding="3dp"
                    android:layout_height="90dp" />
                <customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:textDirection="rtl"
                    android:id="@+id/id_category"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/image_category"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <customviews.CustomTextView
                        android:layout_width="match_parent"
                        android:id="@+id/name_category"
                        android:textDirection="rtl"
                        android:padding="3dp"
                        android:textColor="@color/titleColor"
                        android:textSize="17dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="100dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="70dp"
                        android:layout_alignParentTop="true"
                        android:layout_height="wrap_content" />
                    <customviews.CustomTextView
                        android:layout_width="match_parent"
                        android:id="@+id/desp_category"
                        android:textSize="14dp"
                        android:maxLines="2"
                        android:textColor="@color/contextColor"
                        android:layout_below="@+id/name_category"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="105dp"
                        android:padding="2dp"
                        android:textDirection="rtl"
                        android:layout_marginLeft="70dp"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_alignParentLeft="true"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@color/g200"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <customviews.CustomTextView
                                android:layout_width="25dp"
                                android:textSize="10dp"
                                android:text="25"
                                android:textColor="@color/g800"
                                android:id="@+id/count_post_category"
                                android:padding="2dp"
                                android:gravity="center"
                                android:textDirection="rtl"
                                android:layout_height="25dp" />
                            <customviews.CustomTextView
                                android:layout_width="wrap_content"
                                android:textSize="10dp"
                                android:text="@string/totoal_post"
                                android:textColor="@color/g800"
                                android:padding="2dp"
                                android:gravity="center"
                                android:textDirection="rtl"
                                android:layout_height="25dp" />
                        </LinearLayout>

                        <customviews.CustomTextView
                            android:layout_width="25dp"
                            android:textSize="12dp"
                            android:text="1"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center|bottom"
                            android:textColor="@color/white"
                            android:id="@+id/new_post_category"
                            android:padding="2dp"
                            android:textStyle="bold"
                            android:background="@drawable/new_post"
                            android:textDirection="rtl"
                            android:layout_height="25dp" />

                    </LinearLayout>


                </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/g300"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentBottom="true"
                android:layout_height="1dp"/>
        </RelativeLayout>


</android.support.constraint.ConstraintLayout>
