<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:layoutDirection="ltr"
    android:background="@color/white"
    tools:context=".activity.TitlePostsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.github.ybq.android.spinkit.SpinKitView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/spin_title_post"
            style="@style/SpinKitView.Pulse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            app:SpinKit_Color="@color/colorAccent" />
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_centerInParent="true"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:id="@+id/not_exist_post_card"
            android:elevation="10dp"
            app:cardMaxElevation="15dp"
            app:cardBackgroundColor="@color/blue800"
            tools:ignore="MissingConstraints" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="70dp"
                    android:id="@+id/ban_icon_card"
                    android:src="@drawable/ic_not_interested_black_24dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="70dp"/>
                <customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/ban_icon_card"
                    android:text="@string/no_exit_post"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textSize="32dp"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbar_color"
        android:elevation="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <customviews.CustomTextView3
                android:layout_width="wrap_content"
                android:text="@string/posts"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:shadowColor="@color/counterColor"
                android:layout_height="wrap_content" />
            <customviews.CustomTextView3
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:id="@+id/slug_title"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:shadowColor="@color/counterColor"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.AppCompatImageButton
                android:layout_width="50dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/back_btn"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:background="@color/toolbar_color"
                android:layout_height="50dp" />
            <ImageButton
                android:layout_width="50dp"
                android:padding="15dp"
                android:layout_marginLeft="50dp"
                android:layout_alignLeft="@+id/back_btn"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/home_title_post_btn"
                android:src="@drawable/ic_home_black_24dp"
                android:background="@color/toolbar_color"
                android:layout_height="50dp" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>



    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginBottom="?attr/actionBarSize"
        android:id="@+id/posts_recyclerview"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:layout_height="match_parent"/>
        <customview.PaginationView
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:clipChildren="false"
            android:id="@+id/pager_size_spinner"
            android:layout_height="?attr/actionBarSize"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
