<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:padding="4dp"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:padding="4dp"
        app:cardElevation="6dp"
        android:id="@+id/itemsefareshat"
        android:elevation="10dp"
        android:paddingBottom="6dp"
        app:cardMaxElevation="5dp"
        tools:ignore="MissingConstraints" >



        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rel133"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="90dp"
                android:layout_alignParentRight="true"
                android:id="@+id/relask"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/image_category"
                    android:layout_margin="4dp"
                    android:padding="3dp"
                    android:layout_height="90dp" />
                <customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:textDirection="rtl"
                    android:text="12365"
                    android:id="@+id/id_category"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/image_category"
                    android:layout_height="wrap_content" />


            </RelativeLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:fillViewport="true"
                android:layout_height="170dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <customviews.CustomTextView
                        android:layout_width="wrap_content"
                        android:id="@+id/name_category"
                        android:text="fdsfdf"
                        android:textDirection="rtl"
                        android:padding="3dp"
                        android:textColor="@color/titleColor"
                        android:textSize="12dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="100dp"
                        android:textStyle="bold"
                        android:layout_alignParentTop="true"
                        android:layout_height="wrap_content" />
                    <customviews.CustomTextView
                        android:layout_width="wrap_content"
                        android:id="@+id/desp_category"
                        android:textSize="12dp"
                        android:maxLines="2"
                        android:textColor="@color/contextColor"
                        android:layout_below="@+id/name_category"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="105dp"
                        android:padding="2dp"
                        android:layout_height="wrap_content" />
                    <customviews.CustomTextView
                        android:layout_width="wrap_content"
                        android:text="55545"
                        android:textSize="12dp"
                        android:textColor="@color/counterColor"
                        android:id="@+id/count_category"
                        android:layout_below="@+id/desp_category"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="105dp"
                        android:padding="2dp"
                        android:textDirection="rtl"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
