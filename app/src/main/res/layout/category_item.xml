<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">





        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rel133"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="90dp"
                android:layout_alignParentRight="true"
                android:id="@+id/relask"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/image_category"
                    android:layout_margin="4dp"
                    android:padding="3dp"
                    android:layout_height="90dp" />
                <customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:textDirection="rtl"
                    android:text="12365"
                    android:id="@+id/id_category"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/image_category"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <customviews.CustomTextView
                        android:layout_width="wrap_content"
                        android:id="@+id/name_category"
                        android:text="fdsfdf"
                        android:textDirection="rtl"
                        android:padding="3dp"
                        android:textColor="@color/titleColor"
                        android:textSize="12dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="100dp"
                        android:textStyle="bold"
                        android:layout_alignParentTop="true"
                        android:layout_height="wrap_content" />
                    <customviews.CustomTextView
                        android:layout_width="wrap_content"
                        android:id="@+id/desp_category"
                        android:textSize="12dp"
                        android:maxLines="2"
                        android:textColor="@color/contextColor"
                        android:layout_below="@+id/name_category"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="105dp"
                        android:padding="2dp"
                        android:layout_height="wrap_content" />
                    <customviews.CustomTextView
                        android:layout_width="wrap_content"
                        android:textSize="12dp"
                        android:visibility="gone"
                        android:textColor="@color/counterColor"
                        android:id="@+id/count_category"
                        android:layout_below="@+id/desp_category"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="105dp"
                        android:padding="2dp"
                        android:textDirection="rtl"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/blue800"
                android:layout_marginRight="80dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentBottom="true"
                android:layout_height="1dp"/>
        </RelativeLayout>


</android.support.constraint.ConstraintLayout>
